  
[mysqld]
server-id = 1

skip-name-resolve = 1
performance-schema = 1B
local-infile = 0
mysqlx = 0
open_files_limit = 2000
max_allowed_packet = 256M
sql_mode = "STRICT_TRANS_TABLES,ONLY_FULL_GROUP_BY,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION"

datadir = {{mysql_datadir}}

log_bin=1
expire_log_days=1
log_bin_basename   = {{mysql_binary_log}}
relay_log_basename = {{mysql_relay_log}}
report_host=host1

innodb_log_group_home_dir    = {{mysql_redo}}
innodb_buffer_pool_size      = 128M
innodb_data_home_dir         = {{ mysql_innodb_home}}
innodb_dedicated_server      = 1
innodb_buffer_pool_instances = 4
innodb_log_file_size         = 512M
innodb_log_buffer_size       = 64M
innodb_read_io_threads       = 12
innodb_write_io_threads      = 12
innodb_stats_on_metadata     = 0
innodb_file_per_table        = 1

max_connections = 50
thread_cache_size = 128
table_definition_cache = 65536
table_open_cache = 65536

wait_timeout = 10
connect_timeout = 5
interactive_timeout = 30

tmp_table_size = 128M
max_heap_table_size = 128M

read_buffer_size = 256K
join_buffer_size = 512K
sort_buffer_size = 512K
read_rnd_buffer_size = 512K

slow-query-log = 1
long_query_time = 2
slow_query_log_file = {{mysql_file_slow_log}}
log-error           = {{mysql_file_error_log}}
Agenera_log         = {{mysql_file_general_log}}

socket              = {{mysql_file_pid}}
pid_file            = {{mysql_file_socket}}
